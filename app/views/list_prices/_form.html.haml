= form_for @list_price do |f|
  - if @list_price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list_price.errors.count, "error")} prohibited this list price from being saved:"
      %ul
        - @list_price.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :valid_date
    = f.date_select :valid_date
  .field
    = f.label :product
    = f.select :product_id, options_from_collection_for_select(Product.all, :id, :description), include_blank: true
  .actions
    = f.submit 'Save', class: 'btn'
