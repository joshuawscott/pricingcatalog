%h1 Listing Users

%table.table
  %tr
    %th Email
    %th Last sign-in
    %th Admin?
    %th

  - @users.each do |user|
    %tr
      %td= link_to user.email, edit_admin_user_path(user)
      %td= user.last_sign_in_at
      %td= user.admin?
      %td= link_to 'Destroy', admin_user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New user', new_admin_user_path
