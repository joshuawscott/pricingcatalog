source 'https://rubygems.org'

gem 'rails', '4.0.1'

# Postgres
gem 'pg'

# Niceties for development
gem 'sass-rails', '~> 4.0'
gem 'uglifier', '>= 1.3'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'
gem 'haml'
gem 'haml-rails'
gem 'twitter-bootstrap-rails'

# Soft delete
gem 'paranoia', '~> 2.0'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

gem 'unicorn'

group :development, :test do
  gem 'capistrano'
  gem 'capistrano-rails'
  gem 'pry'
  gem 'pry-debugger'
  gem 'rspec'
  gem 'rspec-rails'
  gem 'shoulda'
end
